generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Paragraph {
  id       String   @id
  author   String
  content  String   @db.LongText
  cover    String?
  markdown Boolean?
  tags     String
  time     DateTime @db.DateTime
  title    String

  @@index([author])
  @@index([time(order: desc)])
  @@index([title])
  @@fulltext([content, author, title, tags])
}
